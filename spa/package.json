{
  "name": "openpath-spa",
  "version": "1.0.0",
  "description": "OpenPath SPA Dashboard",
  "license": "AGPL-3.0-or-later",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist *.tsbuildinfo",
    "prebuild": "npm run clean",
    "build": "npm run typecheck && node esbuild.config.mjs && mkdir -p dist/css && cp css/style.css dist/css/ && cp dist/sw.js sw.js",
    "build:watch": "node esbuild.config.mjs --watch",
    "typecheck": "tsc --noEmit && tsc -p tsconfig.sw.json --noEmit",
    "dev": "node esbuild.config.mjs --watch",
    "test": "npx tsx --test tests/*.test.ts",
    "test:e2e": "npx playwright test",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:ui": "npx playwright test --ui",
    "test:coverage": "c8 npx tsx --test tests/*.test.ts",
    "lint": "eslint src/ --max-warnings=0",
    "lint:fix": "eslint src/ --fix --max-warnings=0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@openpath/shared": "file:../shared",
    "@types/node": "^22.19.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "c8": "^10.1.3",
    "esbuild": "^0.25.0",
    "eslint": "^9.17.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.20.0",
    "@openpath/api": "file:../api"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@trpc/client": "^11.8.1"
  },
  "c8": {
    "check-coverage": true,
    "lines": 65,
    "functions": 65,
    "branches": 55,
    "reporter": [
      "text",
      "lcov"
    ],
    "include": [
      "src/**/*.ts"
    ]
  }
}