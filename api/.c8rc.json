{
    "all": true,
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "tests/**",
        "node_modules/**",
        "coverage/**",
        "src/lib/swagger.ts",
        "src/lib/logger.ts"
    ],
    "reporter": [
        "text",
        "lcov",
        "html"
    ],
    "report-dir": "coverage",
    "check-coverage": true,
    "lines": 70,
    "branches": 50,
    "functions": 60,
    "statements": 70,
    "watermarks": {
        "lines": [
            70,
            90
        ],
        "branches": [
            50,
            80
        ],
        "functions": [
            60,
            90
        ],
        "statements": [
            70,
            90
        ]
    }
}