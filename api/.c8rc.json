{
    "all": true,
    "include": [
        "lib/**/*.js",
        "routes/**/*.js",
        "server.js"
    ],
    "exclude": [
        "tests/**",
        "node_modules/**",
        "coverage/**",
        "lib/swagger.js",
        "lib/error-tracking.js",
        "lib/errors.js",
        "lib/logger.js"
    ],
    "reporter": [
        "text",
        "lcov",
        "html"
    ],
    "report-dir": "coverage",
    "check-coverage": true,
    "lines": 50,
    "branches": 25,
    "functions": 30,
    "statements": 50,
    "watermarks": {
        "lines": [50, 80],
        "branches": [25, 70],
        "functions": [30, 80],
        "statements": [50, 80]
    }
}