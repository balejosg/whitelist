{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "rootDir": ".",
        "outDir": null,
        "declaration": false,
        "declarationMap": false,
        "sourceMap": false,
        "noEmit": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "strict": false,
        "noImplicitAny": false
    },
    "include": [
        "tests/**/*",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}