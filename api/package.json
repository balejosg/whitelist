{
  "name": "@openpath/api",
  "version": "1.0.4",
  "description": "REST API for OpenPath domain requests - Home server deployment",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    }
  },
  "type": "module",
  "scripts": {
    "start": "node dist/src/server.js",
    "dev": "tsx watch src/server.ts",
    "clean": "rm -rf dist coverage *.tsbuildinfo",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "test": "NODE_ENV=test PORT=3006 node --import tsx --test --test-force-exit tests/api.test.ts",
    "test:auth": "NODE_ENV=test PORT=3001 node --import tsx --test --test-force-exit tests/auth.test.ts",
    "test:setup": "NODE_ENV=test PORT=3005 node --import tsx --test --test-force-exit tests/setup.test.ts",
    "test:e2e": "NODE_ENV=test PORT=3002 node --import tsx --test --test-force-exit tests/e2e.test.ts",
    "test:roles": "NODE_ENV=test PORT=3007 node --import tsx --test --test-force-exit tests/roles.test.ts",
    "test:groups": "NODE_ENV=test node --import tsx --test --test-force-exit tests/groups.test.ts",
    "test:push": "NODE_ENV=test PORT=3003 node --import tsx --test --test-force-exit tests/push.test.ts",
    "test:security": "NODE_ENV=test PORT=3004 node --import tsx --test --test-force-exit tests/security.test.ts",
    "test:token-delivery": "NODE_ENV=test node --import tsx --test --test-force-exit tests/token-delivery.test.ts",
    "test:frontend": "node --test ../spa/tests/frontend.test.js",
    "test:all": "NODE_ENV=test node --import tsx tests/run-all.ts",
    "test:coverage": "NODE_ENV=test c8 node --import tsx --test --test-force-exit --test-concurrency=1 tests/*.test.ts",
    "coverage": "npm run test:coverage",
    "test:load": "NODE_ENV=test k6 run tests/load/load-test.js",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "test:unit": "NODE_ENV=test node --import tsx --test tests/schedules.test.ts",
    "test:mutation": "stryker run",
    "db:migrate": "node dist/scripts/migrate.js",
    "db:test": "node -e \"import { db } from './dist/src/db/index.js'; console.log('DB module loaded'); process.exit(0);\"",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:push": "drizzle-kit push",
    "drizzle:studio": "drizzle-kit studio",
    "verify:schema": "tsx scripts/verify-schema.ts"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "openpath",
    "dns",
    "api"
  ],
  "author": "",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "@openpath/shared": "file:../shared",
    "@trpc/server": "^11.8.1",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.45.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "google-auth-library": "^9.14.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "8.13.1",
    "redis": "^4.7.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.0.5",
    "web-push": "^3.6.7",
    "winston": "^3.11.0",
    "zod": "^3.25.76"
  },
  "c8": {
    "check-coverage": true,
    "lines": 65,
    "functions": 65,
    "branches": 55,
    "reporter": [
      "text",
      "lcov"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/types/**",
      "src/db/migrations/**"
    ]
  },
  "devDependencies": {
    "@stryker-mutator/core": "^9.4.0",
    "@stryker-mutator/typescript-checker": "^9.4.0",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/k6": "^0.54.1",
    "@types/node": "^22.15.29",
    "@types/pg": "^8.16.0",
    "@types/redis": "^2.8.32",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@types/web-push": "^3.6.4",
    "c8": "^10.1.3",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.17.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.20.0"
  }
}