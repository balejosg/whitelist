{
  "name": "@openpath/api",
  "version": "1.0.4",
  "description": "REST API for OpenPath domain requests - Home server deployment",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "type": "module",
  "scripts": {
    "start": "node dist/src/server.js",
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "test": "PORT=3006 node --import tsx --test --test-force-exit tests/api.test.ts",
    "test:auth": "PORT=3001 node --import tsx --test --test-force-exit tests/auth.test.ts",
    "test:setup": "PORT=3005 node --import tsx --test --test-force-exit tests/setup.test.ts",
    "test:e2e": "PORT=3002 node --import tsx --test --test-force-exit tests/e2e.test.ts",
    "test:roles": "PORT=3007 node --import tsx --test --test-force-exit tests/roles.test.ts",
    "test:push": "PORT=3003 node --import tsx --test --test-force-exit tests/push.test.ts",
    "test:security": "PORT=3004 node --import tsx --test --test-force-exit tests/security.test.ts",
    "test:frontend": "node --test ../spa/tests/frontend.test.js",
    "test:all": "node --import tsx tests/run-all.ts",
    "test:coverage": "node --experimental-test-coverage --import tsx --test --test-force-exit --test-concurrency=1 tests/*.test.ts",
    "coverage": "npm run test:coverage",
    "test:load": "k6 run tests/load/load-test.js",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "test:unit": "node --import tsx --test tests/schedules.test.ts",
    "test:mutation": "stryker run",
    "db:migrate": "node dist/scripts/migrate.js",
    "db:test": "node -e \"import { db } from './dist/src/db/index.js'; console.log('DB module loaded'); process.exit(0);\"",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:push": "drizzle-kit push",
    "drizzle:studio": "drizzle-kit studio"
  },
  "keywords": [
    "openpath",
    "dns",
    "api"
  ],
  "author": "",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "@openpath/shared": "file:../shared",
    "@trpc/server": "^11.8.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.45.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "8.13.1",
    "redis": "^4.7.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.0.5",
    "web-push": "^3.6.7",
    "winston": "^3.11.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^8.2.6",
    "@stryker-mutator/typescript-checker": "^8.2.6",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/k6": "^0.54.1",
    "@types/node": "^22.15.29",
    "@types/pg": "^8.16.0",
    "@types/redis": "^2.8.32",
    "@types/uuid": "^10.0.0",
    "@types/web-push": "^3.6.4",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "c8": "^10.1.3",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.17.0",
    "tsx": "^4.19.4",
    "typescript": "^5.7.2"
  }
}