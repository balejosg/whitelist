{
  "manifest_version": 3,
  "name": "Monitor de Bloqueos de Red",
  "version": "2.0.0",
  "description": "Detecta dominios bloqueados por whitelists DNS y firewalls. Facilita la identificación de recursos que impiden el correcto funcionamiento de páginas web.",
  "author": "OpenPath System",
  "homepage_url": "https://github.com/balejosg/openpath",
  "developer": {
    "name": "OpenPath System",
    "url": "https://github.com/balejosg/openpath"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "monitor-bloqueos@openpath",
      "strict_min_version": "109.0"
    }
  },
  "permissions": [
    "webRequest",
    "webNavigation",
    "tabs",
    "clipboardWrite",
    "nativeMessaging"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": ["dist/background.js"],
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/icon-48.png"
    },
    "default_title": "Monitor de Bloqueos"
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  }
}