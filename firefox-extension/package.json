{
  "name": "openpath-firefox-extension",
  "version": "1.0.0",
  "description": "OpenPath Firefox Extension for blocked domain handling",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist *.tsbuildinfo",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "dev": "tsc --watch",
    "test": "npx tsx --test tests/*.test.ts",
    "test:coverage": "c8 npx tsx --test tests/*.test.ts"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/webextension-polyfill": "^0.12.1",
    "c8": "^10.1.3",
    "eslint": "^9.17.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.20.0",
    "webextension-polyfill": "^0.12.0"
  },
  "c8": {
    "check-coverage": true,
    "lines": 65,
    "functions": 65,
    "branches": 55,
    "reporter": [
      "text",
      "lcov"
    ],
    "include": [
      "src/**/*.ts"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
