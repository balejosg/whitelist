{
  "name": "@openpath/dashboard",
  "version": "1.0.0",
  "description": "Portal web para gestiÃ³n de OpenPath DNS",
  "license": "AGPL-3.0-or-later",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "clean": "rm -rf dist coverage *.tsbuildinfo",
    "prebuild": "npm run clean",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "test": "NODE_ENV=test node --import tsx --test --test-force-exit --test-concurrency=1 tests/*.test.ts",
    "test:coverage": "NODE_ENV=test c8 node --import tsx --test --test-force-exit --test-concurrency=1 tests/*.test.ts"
  },
  "dependencies": {
    "@openpath/api": "file:../api",
    "@openpath/shared": "file:../shared",
    "@trpc/client": "^11.8.1",
    "cookie-parser": "^1.4.7",
    "express": "^4.21.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.3",
    "c8": "^10.1.3",
    "eslint": "^9.17.0",
    "supertest": "^7.1.4",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.20.0"
  },
  "c8": {
    "check-coverage": true,
    "lines": 50,
    "functions": 35,
    "branches": 50,
    "reporter": [
      "text",
      "lcov"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/types/**"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
