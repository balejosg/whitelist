# Server Configuration
PORT=3000
HOST=0.0.0.0

# Admin Authentication
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_TOKEN=your-secure-admin-token-here

# GitHub Configuration (for pushing approved domains)
GITHUB_TOKEN=ghp_your_personal_access_token
GITHUB_OWNER=LasEncinasIT
GITHUB_REPO=Whitelist-por-aula
GITHUB_BRANCH=main

# Optional: Default group for new requests
DEFAULT_GROUP=informatica-3

# Shared secret for auto-inclusion token generation
# Must match SHARED_SECRET in firefox-extension/config.js
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
SHARED_SECRET=whitelist-secret-2024

# CORS: Allowed origins (comma-separated)
# Example: https://your-username.github.io,http://localhost:8080
CORS_ORIGINS=*
