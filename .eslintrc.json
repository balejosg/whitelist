{
    "env": {
        "node": true,
        "es2022": true
    },
    "parserOptions": {
        "ecmaVersion": 2022
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "no-console": "off",
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "warn",
            "single",
            {
                "avoidEscape": true
            }
        ]
    },
    "ignorePatterns": [
        "node_modules/",
        "coverage/",
        "build/",
        "dist/"
    ]
}