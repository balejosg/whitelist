{
  "name": "auth-worker",
  "version": "1.0.0",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist *.tsbuildinfo",
    "prebuild": "npm run clean",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "test": "node --import tsx --test tests/*.test.ts",
    "test:coverage": "c8 node --import tsx --test tests/*.test.ts",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@eslint/js": "^9.17.0",
    "c8": "^10.1.3",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.20.0",
    "wrangler": "^4.56.0"
  },
  "c8": {
    "check-coverage": true,
    "lines": 65,
    "functions": 65,
    "branches": 55,
    "reporter": [
      "text",
      "lcov"
    ],
    "include": [
      "src/**/*.ts"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
