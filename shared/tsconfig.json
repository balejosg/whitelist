{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "exactOptionalPropertyTypes": true,
        "noUncheckedIndexedAccess": true,
        "strictPropertyInitialization": true,
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ]
}