{
  "name": "@openpath/shared",
  "version": "1.0.0",
  "license": "AGPL-3.0-or-later",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/ --max-warnings=0",
    "test": "node --import tsx --test tests/*.test.ts",
    "test:coverage": "c8 node --import tsx --test tests/*.test.ts"
  },
  "dependencies": {
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "c8": "^10.1.3",
    "eslint": "^9.17.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.20.0"
  },
  "c8": {
    "check-coverage": true,
    "lines": 65,
    "functions": 65,
    "branches": 55,
    "reporter": [
      "text",
      "lcov"
    ],
    "include": [
      "src/**/*.ts"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
