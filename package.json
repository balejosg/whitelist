{
  "name": "openpath-monorepo",
  "version": "4.1.0",
  "description": "DNS-based URL whitelist enforcement system for educational environments",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky || true",
    "build": "npm run build --workspaces --if-present",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "lint:shell": "shellcheck linux/lib/*.sh linux/scripts/**/*.sh tests/**/*.sh || true",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "test": "npm run test:shell && npm test --workspaces --if-present",
    "test:shell": "cd tests && bats *.bats",
    "test:api": "npm test --workspace=@openpath/api",
    "test:dashboard": "npm test --workspace=@openpath/dashboard",
    "test:spa": "npm test --workspace=@openpath/spa",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "verify": "npm run typecheck && npm run lint --workspaces --if-present"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript-eslint": "^8.20.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx,mjs,cjs}": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/balejosg/openpath.git"
  },
  "keywords": [
    "dns",
    "whitelist",
    "dnsmasq",
    "education",
    "content-filter"
  ],
  "license": "AGPL-3.0-or-later",
  "workspaces": [
    "api",
    "spa",
    "shared",
    "dashboard",
    "firefox-extension"
  ],
  "overrides": {
    "esbuild": "^0.25.0",
    "qs": "^6.14.1"
  }
}
